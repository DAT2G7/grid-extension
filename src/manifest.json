{
    "manifest_version": 3,
    "name": "grid-extension",
    "version": "0.0.0.1",
    "description": "Opens a tab contributing to an Aalborg University (DK) grid-computing project",
    "icons": {
        "16": "icons/grid-16.png",
        "32": "icons/grid-32.png",
        "48": "icons/grid-48.png",
        "64": "icons/grid-64.png",
        "128": "icons/grid-128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "page_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/grid-16.png",
            "32": "icons/grid-32.png",
            "48": "icons/grid-48.png",
            "64": "icons/grid-64.png",
            "128": "icons/grid-128.png"
        },
        "default_title": "Popup",
        "default_popup": "action/popup.html"
    },
    "permissions": ["storage"]
}
